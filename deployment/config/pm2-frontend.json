{
  "apps": [
    {
      "name": "exceladdin-frontend",
      "script": "npx",
      "args": ["serve", "-s", "dist", "-l", "3000"],
      "cwd": "../../",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "log_file": "./logs/frontend.log",
      "out_file": "./logs/frontend-out.log",
      "error_file": "./logs/frontend-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "max_memory_restart": "500M",
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}