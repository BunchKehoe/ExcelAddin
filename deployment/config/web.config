<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Enable URL Rewrite Module -->
        <rewrite>
            <rules>
                <!-- Backend API Routes -->
                <rule name="Backend API Routes" stopProcessing="true">
                    <match url="^api/(.*)" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="server-vs81t.intranet.local:9443" />
                    </conditions>
                    <action type="Rewrite" url="http://localhost:5000/api/{R:1}" />
                </rule>
                
                <!-- Frontend Static Files and Routes -->
                <rule name="Frontend Routes" stopProcessing="true">
                    <match url="^excellence/(.*)" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="server-vs81t.intranet.local:9443" />
                    </conditions>
                    <action type="Rewrite" url="http://localhost:3000/{R:1}" />
                </rule>
                
                <!-- Root redirect to frontend -->
                <rule name="Root Redirect" stopProcessing="true">
                    <match url="^$" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="server-vs81t.intranet.local:9443" />
                    </conditions>
                    <action type="Rewrite" url="http://localhost:3000/" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Remove default IIS headers and add proxy headers -->
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="X-Forwarded-Proto" value="https" />
                <add name="X-Forwarded-Host" value="server-vs81t.intranet.local:9443" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Default document settings -->
        <defaultDocument>
            <files>
                <clear />
                <add value="taskpane.html" />
                <add value="index.html" />
            </files>
        </defaultDocument>
        
        <!-- Static file compression -->
        <httpCompression>
            <dynamicTypes>
                <clear />
                <add enabled="true" mimeType="application/json" />
                <add enabled="true" mimeType="application/javascript" />
                <add enabled="true" mimeType="text/css" />
                <add enabled="true" mimeType="text/html" />
            </dynamicTypes>
        </httpCompression>
        
        <!-- Error handling -->
        <httpErrors errorMode="Detailed" />
        
        <!-- Remove server header for security -->
        <security>
            <requestFiltering removeServerHeader="true" />
        </security>
    </system.webServer>
</configuration>