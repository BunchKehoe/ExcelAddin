<?xml version="1.0" encoding="UTF-8"?>
<!--
IIS Configuration for Excel Add-in
Simple configuration to replace nginx with IIS
Serves React frontend and proxies API calls to Flask backend
-->
<configuration>
  <system.webServer>
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="excellence/taskpane.html" />
        <add value="taskpane.html" />
      </files>
    </defaultDocument>

    <!-- Static file serving - only add missing MIME types -->
    <staticContent>
      <!-- Only add MIME types that might be missing, avoiding conflicts -->
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>

    <!-- URL Rewrite rules -->
    <rewrite>
      <rules>
        <!-- API Proxy Rule: Forward API calls to Flask backend on port 5000 -->
        <rule name="API Proxy" stopProcessing="true">
          <match url="^excellence/api/(.*)$" />
          <action type="Rewrite" url="http://127.0.0.1:5000/api/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
          </serverVariables>
        </rule>

        <!-- Health check endpoint -->
        <rule name="Health Check" stopProcessing="true">
          <match url="^health$" />
          <action type="CustomResponse" statusCode="200" statusReason="OK" statusDescription="Excel Add-in IIS Health Check OK" />
        </rule>

        <!-- Root redirect to /excellence/ -->
        <rule name="Root Redirect" stopProcessing="true">
          <match url="^$" />
          <action type="Redirect" url="/excellence/" redirectType="Permanent" />
        </rule>

        <!-- Serve static files directly from /excellence/ path -->
        <rule name="Excellence Static Files" stopProcessing="true">
          <match url="^excellence/(.+)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- SPA fallback: serve taskpane.html for /excellence/ routes when file doesn't exist -->
        <rule name="SPA Fallback" stopProcessing="true">
          <match url="^excellence/.*$" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/excellence/api/" negate="true" />
          </conditions>
          <action type="Rewrite" url="/excellence/taskpane.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- CORS headers for Excel add-in -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
      </customHeaders>
    </httpProtocol>

    <!-- Enable compression for better performance -->
    <urlCompression doDynamicCompression="true" doStaticCompression="true" />

    <!-- Security -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" /> <!-- 50MB -->
      </requestFiltering>
    </security>

  </system.webServer>
</configuration>