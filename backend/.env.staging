# Excel Add-in Backend Staging Environment Configuration
# Copy this file to .env for staging deployment

# Application Configuration
DEBUG=false
HOST=0.0.0.0
PORT=5000
ENVIRONMENT=staging

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=https://server-vs81t.intranet.local:9443

# NiFi Endpoint Configuration
NIFI_ENDPOINT=https://server-vs81t.intranet.local:8443/nifi/api/excel-addin-upload

# SSL/TLS Configuration for NiFi Connection
NIFI_VERIFY_SSL=true

# Certificate Paths (relative to backend/certificates/ directory)
# NIFI_CA_CERT_PATH=nifi-ca-cert.pem

# Logging Configuration
LOG_LEVEL=INFO