<?xml version="1.0" encoding="UTF-8"?>
<!--
IIS Configuration for Flask Backend
This configuration enables IIS to directly host the Python Flask backend application
using FastCGI, eliminating the need for NSSM (Non-Sucking Service Manager).
-->
<configuration>
  <system.webServer>
    
    <!-- FastCGI Handler for Python -->
    <handlers>
      <!-- Handle all API requests with Python -->
      <add name="PythonHandler" 
           path="*" 
           verb="*" 
           modules="FastCgiModule" 
           scriptProcessor="C:\Python39\python.exe|C:\Python39\Lib\site-packages\wfastcgi.py" 
           resourceType="Unspecified" 
           requireAccess="Script" />
    </handlers>
    
    <!-- FastCGI Settings -->
    <fastCgi>
      <application fullPath="C:\Python39\python.exe" 
                   arguments="C:\Python39\Lib\site-packages\wfastcgi.py">
        <environmentVariables>
          <add name="PYTHONPATH" value="C:\inetpub\wwwroot\ExcelAddin\backend" />
          <add name="WSGI_HANDLER" value="wsgi_app.application" />
          <add name="DJANGO_SETTINGS_MODULE" value="" />
          <add name="FLASK_ENV" value="production" />
          <add name="DEBUG" value="false" />
        </environmentVariables>
      </application>
    </fastCgi>
    
    <!-- Security and Performance Settings -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" /> <!-- 50MB -->
      </requestFiltering>
    </security>
    
    <!-- CORS Headers for API -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Handle OPTIONS requests for CORS preflight -->
    <rewrite>
      <rules>
        <rule name="Handle OPTIONS" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_METHOD}" pattern="OPTIONS" ignoreCase="true" />
          </conditions>
          <action type="CustomResponse" statusCode="200" statusReason="OK" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Compression for better performance -->
    <urlCompression doDynamicCompression="true" doStaticCompression="true" />
    
    <!-- Default document -->
    <defaultDocument enabled="false" />
    
  </system.webServer>
  
  <!-- Application Settings -->
  <appSettings>
    <add key="WSGI_HANDLER" value="wsgi_app.application" />
    <add key="PYTHONPATH" value="C:\inetpub\wwwroot\ExcelAddin\backend" />
    <add key="FLASK_ENV" value="production" />
  </appSettings>
  
</configuration>